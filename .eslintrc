{
	"$schema": "https://json.schemastore.org/eslintrc.json",
	"env": {
		"commonjs": true,
		"browser": true,
		"es2022": true
	},
	"extends": [
		"eslint:recommended",
		"airbnb-base",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"plugins": [
		"prettier",
		"import"
	],
	"rules": {
		"no-plusplus": "off",
		"no-param-reassign": "off",
		"radix": "off",
		"no-nested-ternary": "off",
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": true
			}
		],
		"import/extensions": [
			"warn",
			"ignorePackages"
		],
		"max-len": [
			"error",
			{
				"code": 120
			}
		],
		"no-underscore-dangle": "off"
	},
	"ignorePatterns": [
		"out/"
	]
}